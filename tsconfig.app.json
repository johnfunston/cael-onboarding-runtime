{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"],
  "exclude": [
    "src/components/MeshTopologyView3D.tsx",
    "src/components/OnboardingMolecule3D.tsx",
    "src/components/OnboardingMolecule3D.css",
    "src/components/OnboardingMoleculeBackup.tsx",
    "src/pages/Home.tsx",
    "src/pages/OnboardingPage.tsx",
    "src/components/ArchetypeIconBar.css",
    "src/components/ArchetypeIconBar.tsx",
    "src/components/MeshTopologyView.tsx",
    "src/components/Onboarding.css",
    "src/components/Onboarding.tsx",
    "src/components/OnboardingOverlayManager.tsx",
    "src/components/OnboardingSidePanel.tsx",
    "src/components/OnboardingSidePanel.css",
    "src/components/RevDetailPanel.tsx",
    "src/components/RevDnaView.tsx",
    "src/components/RevList.tsx",
    "src/components/RevListItem.tsx"
  ]
}
